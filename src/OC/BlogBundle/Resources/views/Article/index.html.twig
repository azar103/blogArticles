{# src/OC/BlogBundle/Resources/views/Article/index.html.twig #}
{% extends "OCBlogBundle::layout.html.twig" %} 
{% block title %}
    index-{{parent()}}
{% endblock %}

{% block oc_body %}
    <ul>
    {% for article in listArticles  %}
        <li>
        	<a href="{{path('oc_blog_view', {'id': article.id }) }}">  {{article.title}} </a>
        	par {{article.author}} le {{ article.date|date('d/m/Y') }}
        </li>
    {% endfor %}
    </ul>

 <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('oc_blog_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
{% endblock %}